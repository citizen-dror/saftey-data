{
    "compilerOptions": {
      "module": "CommonJS",
      "skipLibCheck": true,
      "lib": ["ESNext", "DOM"],
      "esModuleInterop": true,
      "target": "ES2022",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "resolveJsonModule": true
    },
    "include": [
      "src/**/*",
      "src/types/**/*",   // Ensure the types folder is included
      "src/components/accidents/service/filterCols.json"
    ],
    "exclude": [
      "node_modules"
    ]
  }